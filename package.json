{
  "name": "server",
  "version": "0.0.0",
  "description": "Server for Corniland Project",
  "main": "index.js",
  "scripts": {
    "serve": "node -r ts-node/register src/server.ts",
    "serve:watch": "nodemon",
    "serve:prod": "node dist/server.js",
    "build": "tsc",
    "lint": "tsc --noEmit && eslint . --ext .ts --quiet",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": "https://github.com/Corniland/server.git",
  "author": "CowboyBebop <85stephan58@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@typegoose/typegoose": "^7.4.1",
    "@types/http-errors": "^1.8.0",
    "bcrypt": "^5.0.0",
    "compose-middleware": "^5.0.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-bearer-token": "^2.4.0",
    "helmet": "^4.1.1",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/express-serve-static-core": "^4.17.5",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",

    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "delay": 1500,
    "exec": "npm run serve",
    "ext": "ts"
  },
  "prettier": {
    "printWidth": 200,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "endOfLine": "auto"
  }
}
